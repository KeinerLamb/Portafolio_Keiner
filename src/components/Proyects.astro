---
const PROJECTS = [
  {
    title: "Data Science Salaries 2022â€“2025",
    description:
      "Interactive Power BI dashboard analyzing salary trends across Data Science roles, using SQL for optimized data extraction and transformation.",
    link: "https://app.powerbi.com/reportEmbed?reportId=acd76cee-beb4-44b1-ab4f-14f55e013aa3&autoAuth=true&ctid=ea7be3f9-2e56-477c-a9cd-6cdc77929b89",
    image: "BIX_Data_Science_salary_Project.png",
    tags: ["SQL", "PowerBI"],
  },
];

const TAG_ICONS = {
  PowerBI: "power-bi.svg",
  Python: "python.svg",
  SQL: "sql.svg",
};

---
<style>
  @keyframes moveBorder {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .animated-border {
    position: relative;
    border-radius: 10px;
    padding: 2px; /* Para dar espacio al borde */
  }

  .animated-border::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 10px;
    padding: 3px;
    background: linear-gradient(90deg, #00adfd, #0011ff, #f000e4, #0907ad, #0066ff, #5c068d, #7c058b);
    background-size: 300% 100%;
    animation: moveBorder 10s linear infinite;
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }
</style>

<div class="grid gap-6 grid-cols-1 sm:grid-cols-2">
  {PROJECTS.map(({ image, title, description, link, tags }) => (
    <a
      key={title}
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      class="group rounded-2xl bg-white/5 dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-700 
             transition-all duration-300 ease-in-out overflow-hidden hover:shadow-xl hover:-translate-y-1 hover:bg-white/10 dark:hover:bg-neutral-800"
    >
      <div class="transition-all duration-300 ease-in-out">
        <img
          src={image}
          alt={title}
          class="w-full h-48 object-cover rounded-t-2xl"
        />
        <div class="p-5 flex flex-col justify-between h-full">
          <h3 class="text-lg font-semibold text-neutral-800 dark:text-white mb-2 transition-colors duration-300">
            {title}
          </h3>
          <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4 transition-colors duration-300">
            {description}
          </p>
          <div class="flex flex-wrap gap-2 mt-auto">
            {tags.map((tag) => (
              <span
                key={tag}
                class="flex items-center gap-2 text-xs bg-neutral-100 dark:bg-neutral-800 text-neutral-800 dark:text-neutral-200 px-3 py-1 rounded-full transition-all duration-300"
              >
                <img src={TAG_ICONS[tag]} alt={tag} class="w-4 h-4" />
                {tag}
              </span>
            ))}
          </div>
        </div>
      </div>
    </a>
  ))}
</div>
